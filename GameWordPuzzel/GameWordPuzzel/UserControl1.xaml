<UserControl x:Class="GameWordPuzzel.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameWordPuzzel"
             mc:Ignorable="d" Height="124.5" Width="201">
    <Grid >
        <Polygon Points="100,10 200,50 100,90 100,80 0,80  0,20 100,20" Fill="#FF9B0707" >
            <Polygon.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF83772A" Offset="1"/>
                </LinearGradientBrush>
            </Polygon.Stroke>
        </Polygon>
    </Grid>
</UserControl>
